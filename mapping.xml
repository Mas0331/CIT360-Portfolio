<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="Hibernate.exampls.Persistent" table="fruit" optimistic-lock="version">
		<id name="fruitID" type="java.lang.Integer">
			<column name="fruitId" />
			<generator class="identity" />
		</id>
		<property name="name" type="string">
			<column name="name" length="15" not-null="true" />
		</property>
		<property name="group" type="string">
			<column name="group" length="15" not-null="true" />
		</property>
		<property name="color" type="string">
			<column name="color" length="15" not-null="true" />
		</property>
	
	
	
	</class>

</hibernate-mapping>